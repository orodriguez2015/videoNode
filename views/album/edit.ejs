<% include ../breadcrumbs/albumEdit %>
    <div class="row-fluid">
        <!--Edit Main Content Area here-->
        <div class="span12" id="divMain">

            <h1><%= __ ('edicion_album_fotografico')%></h1>
        
            <p>
                    <%= __ ('mensaje_descripcion_edicion_album')%>
            </p>
        </div>
    </div>



    <div class="row-fluid">
        <div class="span12" id="divMain" style="margin-left:30px;">
            <p>

                <form method="POST" role="form" id="formEditAlbum" name="formEditAlbum" action="" novalidate>
                    <input type="hidden" name="id" id="id" value="<%=album.id%>" />
                    <div class="row">
                        <div class="form-group">
                            <label for="nombre"><b><%= __ ('nombre')%> *</b></label>

                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="<%= __ ('nombre')%>" maxlength="155" value="<%=album.nombre%>">
                        </div>

                        <div class="form-group">
                            <label for="descripcion"><b><%= __ ('descripcion')%> *</b></label>
                            <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="<%= __ ('descripcion')%>" maxlength="225" value="<%=album.descripcion%>">
                        </div>

                        <div class="form-group">
                            <label for="publico"><b><%= __ ('publico')%></b></label>
                            <input class="form-control" type="checkbox" name="publico" id="publico" <% if(album.publico==1) { %> checked='true'
                            <% } %>>
                        </div>
                    </div>

                    <br>
                    <div class="row">
                        <button type="submit" class="btn btn-success"><%= __ ('enviar')%></button>
                        <a href="/album/admin">
                            <button type="button" class="btn btn-danger"><%= __ ('cancelar')%></button>
                        </a>
                    </div>

                </form>

            </p>
        </div>
    </div>


    <script type="text/javascript" src="/javascripts/facade/album/AlbumFacade.js"></script>
    <script type="text/javascript" src="/javascripts/facade/validation/AlbumValidationFacade.js"></script>

    <script type="text/javascript">
        albumValidationFacade.init({
            idForm: "formEditAlbum",
            rules: {
                nombre: {
                    required: true,
                    minlength: 2,
                    maxlength: 100
                },

                descripcion: {
                    required: true,
                    minlength: 2,
                    maxlength: 200
                }
            },
        }, albumValidationFacade.TYPE_EDIT_ALBUM);
    </script>
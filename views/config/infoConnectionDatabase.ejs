<section class="mbr-section" id="form1-l" style="background-color: rgb(255, 255, 255); padding-top: 120px; padding-bottom: 120px;">
    <div class="mbr-section mbr-section-nopadding">
        <div class="container">
            <div class="row">
                <div class="col-xs-8 col-lg-12">

                    <p>
                        <h4>Configuración de la base de datos</h4>
                    </p>
                    <hr>


                    <form id="formConfigBD" name="formConfigBD" role="form" method="POST" action="" novalidate>

                        <div class="form-group">
                            <label for="nombre"><b>Servidor MySQL *</b></label>
                            <input type="text" class="form-control" id="servidor" name="servidor" value="<%=configBBDD.mysql_server %>" placeholder="Servidor MySQL">
                        </div>

                        <div class="form-group">
                            <label for="apellido1"><b>Base de datos *</b></label>
                            <input type="text" class="form-control" id="basedatos" name="basedatos" value="<%=configBBDD.mysql_db_name %>" placeholder="Base de datos">
                        </div>

                        <div class="form-group">
                            <label for="apellido2"><b>Usuario *</b></label>
                            <input type="text" class="form-control" id="usuariobd" name="usuariobd" value="<%=configBBDD.mysql_user %>" placeholder="Usuario">
                        </div>

                        <div class="form-group">
                            <label for="email"><b>Contraseña *</b></label>
                            <input type="text" class="form-control" id="passwordbd" name="passwordbd" value="<%=configBBDD.mysql_pass %>" placeholder="Contraseña">
                        </div>

                        <button type="submit" class="btn btn-success">Siguiente</button>
                        <a href="/config/paso1">
                            <button type="button" class="btn btn-danger">Anterior</button>
                        </a>
                    </form>

                </div>
            </div>
        </div>
</section>



<script type="text/javascript" src="/javascripts/vendor/jquery/jquery.validate.min.js"></script>
<script type="text/javascript" src="/javascripts/vendor/jquery/additional-methods.js"></script>
<script type="text/javascript" src="/javascripts/vendor/jquery/messages_es.js"></script>
<script type="text/javascript" src="/javascripts/facade/config/ConfigFacade.js"></script>
<script type="text/javascript" src="/javascripts/facade/validation/FormValidationFacade.js"></script>
<script type="text/javascript" src="/javascripts/facade/validation/InstallationBDFormValidationFacade.js"></script>

<script type="text/javascript">
    installationFormValidationFacade.init({
        idForm: "formConfigBD",
        rules: {
            servidor: {
                required: true
            },

            basedatos: {
                required: true
            },

            usuariobd: {
                required: true
            },

            passwordbd: {
                required: true
            }
        },
    });
</script>
<% include ../breadcrumbs/videotecaEdit %>

    <div class="row-fluid">
        <!--Edit Main Content Area here-->
        <div class="span12" id="divMain">

            <h1>Editar videoteca</h1>
            <p>
                Crea tu videoteca con tus méjores recuerdos en formato vídeo.
            </p>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span12" id="divMain" style="margin-left:30px;">
            <p>

                <form method="POST" role="form" id="formAltaVideoteca" name="formAltaVideoteca" action="" novalidate>
                    <div class="row">
                        <div class="form-group">
                            <label for="nombre"><b>Nombre videoteca *</b></label>
                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" maxlength="155" value="<%= videoteca.nombre %>">
                        </div>

                        <div class="form-group">
                            <label for="descripcion"><b>Carpeta en disco que contiene los vídeos *</b></label>
                            <input type="text" class="form-control" id="carpeta" name="carpeta" placeholder="Carpeta" maxlength="225" value="<%= videoteca.ruta %>">
                        </div>

                        <div class="form-group">
                            <label for="publico"><b>Público</b></label>
                            <input class="form-control" type="checkbox" name="publico" id="publico" checked="true">
                        </div>
                    </div>


                    <br>
                    <div class="row">
                        <button type="submit" class="btn btn-success">Enviar</button>
                        <a href="/videotecas">
                            <button type="button" class="btn btn-danger">Cancelar</button>
                        </a>
                    </div>

                </form>
            </p>
        </div>
    </div>


    
    
    <script type="text/javascript" src="/javascripts/facade/video/VideoFacade.js"></script>
    <script type="text/javascript" src="/javascripts/facade/validation/VideotecaValidationFacade.js"></script>
    <script type="text/javascript" src="/javascripts/facade/validation/ValidatorVideoteca.js"></script>
    


    <script type="text/javascript">

        videotecaValidation.init({
            idForm: "formAltaVideoteca",
            rules: {
                nombre: {
                    required: true,
                    minlength: 2,
                    maxlength: 100
                },

                carpeta: {
                    required: true,
                    minlength: 2,
                    maxlength: 200,
                    comprobarRutaVideoteca:true
                }
            }
        });
    </script>
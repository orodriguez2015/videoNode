<% include ../breadcrumbs/videotecaEdit %>

    <div class="row-fluid">
        <!--Edit Main Content Area here-->
        <div class="span12" id="divMain">

            <h1><%= __ ('editar_videoteca')%></h1>
            <p>
                    <%= __ ('mensaje_descripcion_crear_biblioteca')%>
            </p>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span12" id="divMain" style="margin-left:30px;">
            <p>

                <form method="POST" role="form" id="formEditVideoteca" name="formEditVideoteca" action="" novalidate>
                    <div class="row">
                        <input type="hidden" name="idVideoteca" id="idVideoteca" value="<%=videoteca.id%>"/>
                        <div class="form-group">
                            <label for="nombre"><b><%= __ ('nombre_videoteca')%> *</b></label>
                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="<%= __ ('nombre')%>" maxlength="155" value="<%=videoteca.nombre%>">
                        </div>

                        <div class="form-group">
                            <label for="descripcion"><b><%= __ ('carpeta_disco_videoteca_obligatorio')%></b></label>
                            <input type="text" class="form-control" id="carpeta" name="carpeta" placeholder="<%= __ ('carpeta')%>" maxlength="225" value="<%=videoteca.ruta%>">
                        </div>

                        <div class="form-group">
                            <label for="publico"><b><%= __ ('publico')%></b></label>
                            <input class="form-control" type="checkbox" name="publico" id="publico" <% if(videoteca.publico ==1) { %> checked="true" <%}%>>
                        </div>
                    </div>


                    <br>
                    <div class="row">
                        <button type="submit" class="btn btn-success"><%= __ ('enviar')%></button>
                        <a href="/videotecas">
                            <button type="button" class="btn btn-danger"><%= __ ('cancelar')%></button>
                        </a>
                    </div>

                </form>
            </p>
        </div>
    </div>

    
    <script type="text/javascript" src="/javascripts/facade/video/VideoFacade.js"></script>
    <script type="text/javascript" src="/javascripts/facade/validation/VideotecaValidationFacade.js"></script>
    <script type="text/javascript" src="/javascripts/facade/validation/ValidatorVideoteca.js"></script>


    <script type="text/javascript">

        videotecaValidation.init({
            idForm: "formEditVideoteca",
            rules: {
                nombre: {
                    required: true,
                    minlength: 2,
                    maxlength: 100
                },

                carpeta: {
                    required: true,
                    minlength: 2,
                    maxlength: 200,
                    comprobarRutaVideotecaUsuario:true
                }
            }
        },videotecaValidation.EDITAR_VIDEOTECA);
    </script>
<div class="row-fluid">
    <!--Edit Main Content Area here-->
    <div class="span12" id="divMain">
        <h1><%= __('edicion_usuario') %></h1>
    </div>
</div>

<div class="row-fluid">
    <div class="span12" id="divMain" style="margin-left:0px;">
        <p>

            <form id="formPerfilUsuario" name="formPerfilUsuario" role="form" method="POST" action="" novalidate>
                <input type="hidden" name="id" id="id" value="<%=usuario.ID%>" />

                <div class="form-group">
                    <label for="nombre"><b><%= __('nombre_obligatorio')%></b></label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="<%=usuario.NOMBRE%>" placeholder="<%= __('nombre')%>">
                </div>

                <div class="form-group">
                    <label for="apellido1"><b><%= __('primer_apellido_obligatorio')%></b></label>
                    <input type="text" class="form-control" id="apellido1" name="apellido1" value="<%=usuario.APELLIDO1%>" placeholder="<%= __('primer_apellido')%>">
                </div>

                <div class="form-group">
                    <label for="apellido2"><b><%= __('segundo_apellido_obligatorio')%></b></label>
                    <input type="text" class="form-control" id="apellido2" name="apellido2" value="<%=usuario.APELLIDO2%>" placeholder="<%= __('segundo_apellido')%>">
                </div>

                <div class="form-group">
                    <label for="nombre"><b><%= __('email_obligatorio')%></b></label>
                    <input type="text" class="form-control" id="email" name="email" value="<%=usuario.EMAIL%>" placeholder="<%= __('email')%>">
                </div>


                <div class="form-group">
                    <label for="login"><b><%= __('login_obligatorio')%></b></label>
                    <input type="text" class="form-control" id="usuario" name="usuario" value="<%=usuario.LOGIN%>" placeholder="<%= __('login')%>">
                </div>

                <div class="form-group">
                    <label for="password"><b><%= __('password_edicion')%></b> </label>
                    <input type="password" class="form-control" id="contrasena" name="contrasena" value="<%=usuario.PASSWORD%>" placeholder="<%= __('password')%>">
                </div>

                <button type="submit" class="btn btn-success"><%= __('modificar')%></button>
            </form>
        </p>
    </div>
</div>


<script type="text/javascript" src="/javascripts/facade/user/UserFacade.js"></script>
<script type="text/javascript" src="/javascripts/vendor/jquery/jquery.validate.min.js"></script>
<script type="text/javascript" src="/javascripts/vendor/jquery/additional-methods.js"></script>
<script type="text/javascript" src="/javascripts/vendor/jquery/messages_es.js"></script>
<script type="text/javascript" src="/javascripts/facade/validation/FormValidationFacade.js"></script>
<script type="text/javascript" src="/javascripts/facade/validation/UserFormValidationFacade.js"></script>
<script type="text/javascript" src="/javascripts/facade/validation/ValidatorEditionUser.js"></script>

<script type="text/javascript">
    userFormValidationFacade.init({
        idForm: "formPerfilUsuario",
        rules: {
            nombre: {
                required: true,
                minlength: 2,
                maxlength: 100
            },

            apellido1: {
                required: true,
                minlength: 2
            },

            apellido2: {
                required: true,
                minlength: 2
            },

            email: {
                required: true,
                email: true,
                comprobarEmailOtroUsuario: {
                    idUsuario: "<%=usuario.ID %>"
                }
            },

            usuario: {
                required: true,
                minlength: 4,
                comprobarLoginOtroUsuario: {
                    idUsuario: "<%=usuario.ID %>"
                }
            },

            contrasena: {
                required: false,
                minlength: 4,
                comprobarPassword: {}
            }
        }
    }, userFormValidationFacade.TYPE_PROFILE);
</script>